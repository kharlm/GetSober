<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kharlmccatty.baccalculator.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shot"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/imageView3"
        android:layout_x="200dp"
        android:layout_y="49dp"/>

    <TextView
        android:text="Shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_x="64dp"
        android:layout_y="153dp"/>

    <TextView
        android:text="Wine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_x="207dp"
        android:layout_y="182dp"/>

    <TextView
        android:text="Beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_x="70dp"
        android:layout_y="211dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/wine"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_x="131dp"
        android:layout_y="58dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/beer"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/wine"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/shot"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"/>

    <TextView
        android:text="Mixed drink/Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_x="163dp"
        android:layout_y="211dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/textView3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/other"
        android:id="@+id/imageView4"
        android:layout_x="283dp"
        android:layout_y="36dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/other"
        android:layout_toRightOf="@+id/shot"
        android:layout_above="@+id/male"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/shot"/>


    <TextView
    android:text="Weight"
    android:layout_width="50sp"
    android:layout_height="50sp"
    android:id="@+id/textView5"

    android:layout_below="@+id/female"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/male"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/beer"

        android:onClick="onRadioButtonClicked"
        />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/female"
        android:layout_below="@+id/beer"
        android:layout_alignParentLeft="true"
        android:onClick="onRadioButtonClicked"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"

        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/hours"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginTop="12dp"/>

    <TextView
        android:text="Hours passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hours"
        android:layout_toRightOf="@+id/hours"
        android:layout_toEndOf="@+id/hours"
        android:id="@+id/hourtext"
        />

    <TextView
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:gravity="center"
        android:textSize="50sp"
        android:id="@+id/bac"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/textView2"
        android:textColor="@color/red"
        android:layout_alignStart="@+id/textView2"/>

    <TextView
        android:text="Sober"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textColor="@color/yellow"
        android:layout_below="@+id/bac"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Click to Calculate BAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/hours"
        android:layout_toRightOf="@+id/female"
        android:layout_toEndOf="@+id/female"/>

    <Button
        android:text="Click to call an Uber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uber"
        android:layout_below="@+id/status"
        android:layout_alignLeft="@+id/wine"
        android:layout_alignStart="@+id/wine"/>

    <Button
        android:text="Set Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickSetAlarm"/>

    <TextView
        android:text="0 sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/shot"
        android:layout_toEndOf="@+id/shot"/>

    <TextView
        android:text="Until you can drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:id="@+id/textView10"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/beer"
        android:id="@+id/imageView"
        android:layout_x="14dp"
        android:layout_y="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:windowSoftInputMode="adjustPan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
